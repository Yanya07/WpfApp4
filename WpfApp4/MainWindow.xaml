<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приложение для фильтрации задач" Height="350" Width="525">
    <Grid>
        <!-- Список для отображения событий -->
        <ListBox x:Name="EventListBox" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="500" Margin="10"/>

        <!-- Кнопки для фильтрации -->
        <Button Content="Фильтр по дате" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="10,220,0,0" Click="FilterByDateButton_Click"/>
        <Button Content="Фильтр по ключевому слову" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="180,220,0,0" Click="FilterByKeywordButton_Click"/>
        <Button Content="Сбросить фильтры" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="350,220,0,0" Click="ResetFilterButton_Click"/>
    </Grid>
</Window>
